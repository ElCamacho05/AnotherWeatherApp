<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encabezado: Título y Hora -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_revert"
                app:tint="#000000"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDetailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalle del Clima"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/tvDetailTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoy, 14:00"
                    android:textSize="16sp"
                    android:textColor="#757575"/>
            </LinearLayout>
        </LinearLayout>

        <!-- TARJETA PRINCIPAL (La más grande) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00AEEF"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvDetailTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24°C"
                    android:textSize="64sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvDetailDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cielo Despejado"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDetailTemp"/>

                <ImageView
                    android:id="@+id/ivDetailIcon"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_weather_placeholder"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- FILA 1 DE CUADRADOS (Sensación y Viento) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Cuadrado 1: Sensación Térmica -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginEnd="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensación"
                        android:textColor="#757575"/>
                    <TextView
                        android:id="@+id/tvDetailFeelsLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26°C"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Cuadrado 2: Viento -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginStart="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Viento"
                        android:textColor="#757575"/>
                    <TextView
                        android:id="@+id/tvDetailWind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 km/h"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tvDetailWindDir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NW (300°)"
                        android:textSize="12sp"
                        android:textColor="#757575"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- FILA 2 DE CUADRADOS (Lluvia y Humedad) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Cuadrado 3: Lluvia -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginEnd="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lluvia"
                        android:textColor="#757575"/>
                    <TextView
                        android:id="@+id/tvDetailRain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30%"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:id="@+id/tvDetailRainVol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 mm"
                        android:textSize="12sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Cuadrado 4: Humedad -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginStart="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humedad"
                        android:textColor="#757575"/>
                    <TextView
                        android:id="@+id/tvDetailHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65%"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- FILA 3 DE CUADRADOS (Presión y Visibilidad) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Cuadrado 5: Presión -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginEnd="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Presión"
                        android:textSize="12sp"
                        android:textColor="#757575"/>
                    <TextView
                        android:id="@+id/tvDetailPressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1013 hPa"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Cuadrado 6: Visibilidad -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginStart="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visibilidad"
                        android:textSize="12sp"
                        android:textColor="#757575"/>
                    <TextView
                        android:id="@+id/tvDetailVisibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 km"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>