<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Foto de la publicación (Cuadrada para el grid) -->
        <ImageView
            android:id="@+id/ivPublicacionFoto"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            android:background="#EEEEEE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Título de la publicación -->
            <TextView
                android:id="@+id/tvPublicacionTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Autor de la publicación -->
            <TextView
                android:id="@+id/tvPublicacionAutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Por: Usuario"
                android:textSize="11sp"
                android:textColor="#6200EE"
                android:layout_marginTop="2dp"/>

            <!-- Contenedor horizontal para Fecha y Orientación -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <!-- Fecha -->
                <TextView
                    android:id="@+id/tvPublicacionFecha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fecha"
                    android:textSize="10sp"
                    android:textColor="#757575"/>

                <!-- Orientación (Brújula) -->
                <TextView
                    android:id="@+id/tvPublicacionOrientacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Norte"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"/>
            </LinearLayout>

            <!-- Ubicación -->
            <TextView
                android:id="@+id/tvPublicacionUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicación"
                android:textSize="10sp"
                android:textStyle="italic"
                android:textColor="#616161"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>