<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
      Esta línea define que vamos a usar la carpeta de "caché externa"
      para guardar las fotos temporales.

      name="my_images": Es un alias de seguridad (oculta la ruta real).
      path="/": Significa que puede usar cualquier subcarpeta dentro de la caché.
    -->
    <external-cache-path name="my_images" path="/" />

</paths>